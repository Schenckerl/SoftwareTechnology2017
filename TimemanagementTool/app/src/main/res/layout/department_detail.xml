<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_8sdp">

    <TextView
        android:id="@+id/department_info_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/details_for_department"
        android:textSize="24sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/department_info_header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supervisor"
            android:layout_marginRight="@dimen/_32sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/supervisor_name"
            android:text="@string/supervisor_name"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/users"
        android:id="@+id/textView3"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />
    <ListView
        android:id="@+id/users_for_department"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_department"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/_8sdp"
        android:background="@color/colorPrimaryMiddle"
        android:id="@+id/edit_department"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/users_for_department"
        android:layout_centerHorizontal="true" />
</RelativeLayout>